<Configuration>


	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d [%t] %highlight{%5p} %c::%M():%L - %m%n"></PatternLayout>
		</Console>
		
		<File name="FileAppender" fileName="logs/application.log">
			<PatternLayout pattern="%d [%t] %highlight{%5p} %c::%M():%L - %m%n"></PatternLayout>
		</File>
	</appenders>


	<loggers>
		<root level="INFO">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileAppender" />
		</root>
	</loggers>


</Configuration>