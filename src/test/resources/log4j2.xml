<Configuration>


	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{dd-MM-yyyy HH:mm:ss} [%t] %highlight{%5p} %c{1}::%M():%L - %m%n"></PatternLayout>
		</Console>

		<File name="FileAppender" fileName="logs/application.log">
			<PatternLayout
				pattern="%d{dd-MM-yyyy HH:mm:ss} [%t] %highlight{%5p} %c{1}::%M():%L - %m%n"></PatternLayout>
		</File>
	</appenders>


	<loggers>
		<root level="INFO">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileAppender" />
		</root>
	</loggers>


</Configuration>